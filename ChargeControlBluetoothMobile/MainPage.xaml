<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChargeControlBluetoothMobile.MainPage">

    <StackLayout>
        <Button Text="Search" Clicked="ScanDevice"/>
        <ListView x:Name="DevicesList"
                      IsPullToRefreshEnabled="true"
                      CachingStrategy="RecycleElement"
                      ItemSelected="DevicesList_OnItemSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout>
                            <Label Text="{Binding NativeDevice.Name}"></Label>
                            <Label Text="{Binding NativeDevice.Address}" ></Label>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>

</ContentPage>
